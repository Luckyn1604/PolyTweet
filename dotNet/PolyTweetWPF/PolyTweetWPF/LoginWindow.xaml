<Window x:Class="PolyTweetWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyTweet" Height="300" Width="300">
    <Grid>
        <Label Content="Pseudo :" Margin="10,50,200,180" Name="labelLogin" />
        <TextBox Margin="100,55,30,185" Name="textBoxLogin" />
        <Label Content="Password :" Margin="10,90,200,140" Name="labelPassword" />
        <PasswordBox Margin="100,95,30,145" Name="passwordBoxPassword"  />
        <Button Content="Connexion" Margin="90,135,90,100" Name="buttonLogin" Click="buttonConnexion_Click" />
        <Button Content="Inscription" Margin="90,175,90,60" Name="buttonSignin" Click="buttonInscription_Click" />
        <Button Content="Annuler" Margin="90,215,90,20" Name="buttonCancel" Click="buttonAnnuler_Click" />
        <Label Content="" Margin="10,10,10,220" Name="ErrorLabel" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
