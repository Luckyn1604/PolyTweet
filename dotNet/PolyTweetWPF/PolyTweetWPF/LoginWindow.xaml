<Window x:Class="PolyTweetWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyTweet" Height="300" Width="300">
    <Grid>
        <Label Content="Pseudo :" Margin="10,50,200,190" Name="labelLogin" />
        <TextBox Margin="100,55,30,195" Name="textBoxLogin" />
        <Label Content="Password :" Margin="10,90,200,150" Name="labelPassword" />
        <PasswordBox Margin="100,95,30,155" Name="passwordBoxPassword"  />
        <Button Content="Connexion" Margin="90,135,90,110" Name="buttonLogin" Click="buttonConnexion_Click" />
        <Button Content="Inscription" Margin="90,175,90,70" Name="buttonSignin" Click="buttonInscription_Click" />
        <Button Content="Annuler" Margin="90,215,90,30" Name="buttonCancel" Click="buttonAnnuler_Click" />
        <Label Content="" Height="26" HorizontalAlignment="Left" Margin="25,14,0,0" Name="ErrorLabel" VerticalAlignment="Top" Width="233" />
    </Grid>
</Window>
